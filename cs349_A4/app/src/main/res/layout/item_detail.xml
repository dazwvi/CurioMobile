<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.cs349_a4.ItemDetailFragment"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/desc_section_board">

        <TextView
            android:id="@+id/item_detail_desc_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textIsSelectable="true"
            android:text="ABOUT"
            android:textSize="40dp"
            android:textColor="#666666" />
        <TextView
            android:id="@+id/item_detail_desc"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textIsSelectable="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/desc_section_board"
        android:id="@+id/item_detail_contribute">
        <TextView
            android:id="@+id/item_detail_curio_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textIsSelectable="true"
            android:text="CONTRIBUTE"
            android:textSize="40dp"
            android:textColor="#666666" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/desc_section_board"
        android:id="@+id/item_detail_team">
        <TextView
            android:id="@+id/item_detail_team_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:textIsSelectable="true"
            android:text="TEAM"
            android:textSize="40dp"
            android:textColor="#666666" />
    </LinearLayout>

</LinearLayout>
